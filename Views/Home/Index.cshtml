@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5 text-center">
    <h1 class="display-4">Welcome to Legacy Dining</h1>
    <p class="lead">A fine dining experience, where tradition meets modern flavors.</p>

    

    <div class="mt-5">
        <h3>Why Dine With Us?</h3>
        <div class="row mt-3">
            <div class="col-md-4">
                <div class="card shadow-lg p-3">
                    <i class="bi bi-star-fill text-warning" style="font-size: 2rem;"></i>
                    <h5 class="mt-2">Exquisite Cuisine</h5>
                    <p>Delight in our carefully crafted dishes made from the finest ingredients.</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-lg p-3">
                    <i class="bi bi-house-heart text-danger" style="font-size: 2rem;"></i>
                    <h5 class="mt-2">Cozy Atmosphere</h5>
                    <p>Enjoy a warm, elegant ambiance perfect for any occasion.</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-lg p-3">
                    <i class="bi bi-people-fill text-primary" style="font-size: 2rem;"></i>
                    <h5 class="mt-2">Exceptional Service</h5>
                    <p>Our dedicated staff ensures a memorable dining experience for you.</p>
                </div>
            </div>
        </div>
